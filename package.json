{
  "name": "@tib/config",
  "version": "0.2.0",
  "description": "A Hierarchical node.js configuration library with files, environment variables, command-line arguments, and atomic object merging.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prerelease": "cross-env CI=1 npm run test",
    "release": "np --no-2fa",
    "build": "tib-tsc",
    "build:full": "npm ci --ignore-scripts && npm run clean && npm run build",
    "postbuild": "cpx \"src/__tests__/**/*.{json,yml,yaml,toml,ini}\" \"dist/__tests__\"",
    "coverage:ci": "tib-nyc report --reporter=text-summary",
    "coverage": "tib-nyc report --reporter=text-summary && open-cli coverage/index.html",
    "precoverage": "npm test",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "tib-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "tib-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:fix": "npm run prettier:cli -- --write",
    "format": "npm run prettier:fix",
    "clean": "tib-clean dist coverage .nyc_output *.tsbuildinfo",
    "pretest": "npm run clean && npm run format",
    "test": "tib-nyc npm run mocha",
    "test:ci": "tib-nyc npm run mocha",
    "posttest": "npm run lint",
    "premocha": "npm run build",
    "mocha": "tib-mocha \"dist/__tests__/**/*.js\"",
    "preunit": "npm run build",
    "unit": "tib-mocha \"dist/__tests__/unit/**/*.js\""
  },
  "author": "Yvan Tao <towyuan@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "@tib/utils": "^2.4.4",
    "tslib": "^2.0.3",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@tib/build": "^6.4.0",
    "@tib/eslint-config": "^8.3.0",
    "@tib/testlab": "^3.5.0",
    "@types/ini": "^1.3.30",
    "@types/js-yaml": "^3.12.5",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.2",
    "@types/tmp": "^0.2.0",
    "@types/yargs": "^15.0.9",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "delay": "^4.4.0",
    "execa": "^4.0.3",
    "mocha": "^8.2.0",
    "np": "^6.5.0",
    "open-cli": "^6.0.1",
    "tmp": "^0.2.1"
  },
  "optionalDependencies": {
    "@iarna/toml": "^2.2.5",
    "ini": "^1.3.5",
    "js-yaml": "^3.14.0"
  },
  "keywords": [],
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ]
}
